@{
    Layout = "_Layout";
    ViewBag.Title = "Home";
}

<div class="landing">
    <div class="landing-card">
        <div class="landing-badge">Library Management System</div>

        <h1 class="landing-title">Welcome</h1>
        <p class="landing-subtitle">
            Sign in to manage books, readers, and borrowings.
        </p>

        <div class="landing-actions">
            <a class="btn btn-success btn-large" href="/login">Login</a>
            <a class="btn btn-warning btn-large" href="/register">Register</a>
        </div>

        <div class="landing-features">
            <div class="landing-feature">
                <h3>Books</h3>
                <p>Add, edit, and track availability.</p>
            </div>

            <div class="landing-feature">
                <h3>Readers</h3>
                <p>Store reader profiles and details.</p>
            </div>

            <div class="landing-feature">
                <h3>Borrowings</h3>
                <p>Create borrowings, extend, and return.</p>
            </div>
        </div>
    </div>
</div>
