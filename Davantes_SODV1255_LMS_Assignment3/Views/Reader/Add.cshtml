@model Reader

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add Reader";
}

<div class="form-container">
    <h2 class="form-title">Add Reader</h2>

    <form asp-action="Add" method="post" class="form">

        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="input" />
            <span asp-validation-for="FirstName"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="input" />
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="input" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="input" />
            <span asp-validation-for="Phone"></span>
        </div>

        <button type="submit" class="btn btn-success">
            Add Reader
        </button>

        <a asp-action="Index" class="btn btn-danger">
            Cancel
        </a>

    </form>
</div>
